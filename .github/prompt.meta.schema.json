{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "./prompt.meta.schema.json",
  "title": "Prompt File Metadata Schema",
  "description": "Schema for YAML front matter 'prompt_metadata' used in repository prompt files.",
  "type": "object",
  "required": ["prompt_metadata"],
  "properties": {
    "prompt_metadata": {
      "type": "object",
      "required": [
        "id",
        "title",
        "description",
        "owner",
        "repository",
        "version",
        "created",
        "output_path",
        "output_format"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Short slug identifier for the prompt.",
          "pattern": "^[a-z0-9-]+$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "owner": {
          "type": "string",
          "minLength": 1
        },
        "repository": {
          "type": "string",
          "minLength": 1,
          "description": "Repository name or slug this prompt belongs to."
        },
        "version": {
          "type": "string",
          "description": "Prompt version in semver format.",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z-.]+)?(\\+[0-9A-Za-z-.]+)?$"
        },
        "created": {
          "type": "string",
          "format": "date",
          "description": "Creation date (YYYY-MM-DD)."
        },
        "updated": {
          "type": "string",
          "format": "date",
          "description": "Last updated date (YYYY-MM-DD)."
        },
        "output_path": {
          "type": "string",
          "minLength": 1,
          "description": "Relative path where the generated artifact should be written."
        },
        "category": {
          "type": "string",
          "description": "Functional category of the prompt (e.g., documentation, codegen, governance).",
          "enum": [
            "documentation",
            "codegen",
            "governance",
            "testing",
            "data",
            "infra",
            "analysis",
            "other"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "output_format": {
          "type": "string",
          "enum": ["markdown", "md", "json", "text", "yaml"]
        },
        "inputs": {
          "type": "array",
          "description": "Optional structured inputs accepted by this prompt.",
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^[A-Za-z_][\\w-]*$"
              },
              "type": {
                "type": "string",
                "enum": [
                  "string",
                  "number",
                  "boolean",
                  "enum",
                  "array",
                  "object",
                  "path",
                  "datetime",
                  "date"
                ]
              },
              "required": {
                "type": "boolean",
                "default": false
              },
              "default": {},
              "description": {
                "type": "string"
              },
              "enumValues": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "allOf": [
              {
                "if": { "properties": { "type": { "const": "enum" } } },
                "then": { "required": ["enumValues"] }
              }
            ],
            "additionalProperties": false
          }
        },
        "runtime": {
          "type": "object",
          "description": "Optional model/runtime hints used by local prompt runners.",
          "properties": {
            "model": { "type": "string" },
            "temperature": { "type": "number", "minimum": 0, "maximum": 1 },
            "max_tokens": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": false
        },
        "compliance": {
          "type": "object",
          "description": "Optional compliance flags.",
          "properties": {
            "pii_safe": { "type": "boolean" },
            "security_reviewed": { "type": "boolean" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
